@model User
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">The Serial Trader</h1>
        <h3 class="mt-5">
            Hello World!
        </h3>
        <h4 class="mt-3">I am a trading bot who was born to make traders' life easy!<br />Currently under development, I will be up and running in no time.</h4>
    </div>
    <div class="mt-5 row justify-content-center">
        <p class="text-center">Sign up with your email here. First 50 users will get exclusive rewards once I am live.</p>
        <div class="col-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input type="text" asp-for="City" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
